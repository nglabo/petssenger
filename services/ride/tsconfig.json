{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**"
  ],
  "include": ["src/**/*"]
}
